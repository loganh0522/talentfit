<p id="notice"><%= notice %></p>

<div class = "row">
  <h1>Listing Job Templates</h1>
  <div class = "pull-right range-query">
    <%= form_tag job_templates_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end%>
  </div>
</div>

<div class = "media">
  <div class = "media-body">
    <table class = "table table-hover">
      <thead>
        <tr>
          <th>Template Name</th>
          <th>Date Created </th>
          <th>Job Description</th>
          <th>Job Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @job_templates.each do |job_template| %>
          <tr>        
            <td><%= job_template.template_name %></td>
            <td><%= job_template.created_at.strftime("%Y-%d-%m") %></td>
            <td><%= job_template.job_description %></td>
            <td><%= job_template.job_type %></td>
            <td><%= link_to 'Show', job_template, class: "btn btn-mini" %></td>
            <td><%= link_to 'Edit', edit_job_template_path(job_template), class: "btn btn-mini btn-success" %></td>
            <td><%= link_to 'Destroy', job_template, method: :delete, class: "btn btn-mini btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Job template', new_job_template_path %>
